{
    "name": "roave/docbook-tool",
    "description": "Generates static documentation from Markdown docs",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        }
    ],
    "require": {
        "php": "~8.3.12",
        "ext-curl": "*",
        "ext-gd": "*",
        "guzzlehttp/guzzle": "^7.9.2",
        "guzzlehttp/psr7": "^2.7.0",
        "jasny/twig-extensions": "^1.3.1",
        "michelf/php-markdown": "^2.0",
        "monolog/monolog": "^3.7.0",
        "psr/log": "^3.0.2",
        "symfony/yaml": "^7.1.5",
        "thecodingmachine/safe": "^2.5.0",
        "twig/twig": "^3.8.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0.0",
        "phpunit/phpunit": "^10.5.37",
        "psalm/plugin-phpunit": "^0.19.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.26.1"
    },
    "autoload": {
        "psr-4": {
            "Roave\\DocbookTool\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Roave\\DocbookToolUnitTest\\": "test/unit",
            "Roave\\DocbookToolIntegrationTest\\": "test/integration"
        }
    },
    "suggest": {
        "ext-posix": "Allows interactive entry of Confluence credentials"
    },
    "bin": [
        "bin/docbook-tool"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "which java",
            "which wkhtmltopdf"
        ],
        "post-update-cmd": [
            "which java",
            "which wkhtmltopdf"
        ]
    }
}
