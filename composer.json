{
    "name": "roave/docbook-tool",
    "description": "Generates static documentation from Markdown docs",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com"
        }
    ],
    "require": {
        "php": "8.0.*",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/psr7": "^1.7",
        "jasny/twig-extensions": "^1.3",
        "michelf/php-markdown": "^1.9",
        "monolog/monolog": "^2.2",
        "psr/log": "^1.1",
        "symfony/yaml": "^5.2",
        "thecodingmachine/safe": "^1.3",
        "twig/twig": "^3.2",
        "webmozart/assert": "^1.9"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Roave\\DocbookTool\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Roave\\DocbookToolUnitTest\\": "test/unit",
            "Roave\\DocbookToolIntegrationTest\\": "test/integration"
        }
    },
    "suggest": {
        "ext-posix": "Allows interactive entry of Confluence credentials"
    },
    "bin": [
        "bin/docbook-tool"
    ],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "which java",
            "which wkhtmltopdf"
        ],
        "post-update-cmd": [
            "which java",
            "which wkhtmltopdf"
        ]
    }
}
